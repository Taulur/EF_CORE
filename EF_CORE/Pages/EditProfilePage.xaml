<Page x:Class="EF_CORE.Pages.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      xmlns:validators="clr-namespace:EF_CORE.ValidationRules"
      xmlns:converters="clr-namespace:EF_CORE.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">
    <Page.Resources>
        <converters:ImageConverter x:Key="ImageConverter"></converters:ImageConverter>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Label>Телефон</Label>
            <StackPanel>
                <TextBox x:Name="PhoneBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Phone">
                            <!--<Binding.ValidationRules>
                        <validators:PasswordValidation/>
                    </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <Label>День рождения</Label>
            <StackPanel>
                <TextBox x:Name="BirthdayBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Birthday">
                            <!--<Binding.ValidationRules>
                        <validators:PasswordValidation/>
                    </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label>URL ссылка</Label>
            <StackPanel>
                <TextBox x:Name="UrlTextBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.AvatarUrl">
                            <!--<Binding.ValidationRules>
        <validators:PasswordValidation/>
    </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label>Краткое описание</Label>
            <StackPanel>
                <TextBox x:Name="BioBox" Height="100">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Bio">
                            <!--<Binding.ValidationRules>
                                    <validators:PasswordValidation/>
                                </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

                <StackPanel>
                    <Button Click="save">Сохранить в БД</Button>
                    <Button Click="back">Назад</Button>
                </StackPanel>
            </StackPanel>
        <StackPanel Grid.Column="1">
            <Label>Изображение</Label>
            <Image Name="PreviewImage" Width="300" Height="200" Source="{Binding ElementName=UrlTextBox, Path=Text, Converter={StaticResource ImageConverter}}"/>
        </StackPanel>
    </Grid>
</Page>
