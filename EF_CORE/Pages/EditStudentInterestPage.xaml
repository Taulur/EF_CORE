<Page x:Class="EF_CORE.Pages.EditStudentInterestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      xmlns:validators="clr-namespace:EF_CORE.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="EditStudentInterestPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                
            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Label>Информация о студенте</Label>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Login}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Имя</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Name}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Почта</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Email}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock>Дата регистрации в группе</TextBlock>
                <TextBox>
                    <TextBox.Text>
                        <Binding Path="userInterest.JoinedAt">
                        <Binding.ValidationRules>
                            <validators:DateValidation/>
                        </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Является ли модератором</Label>
                <CheckBox IsChecked="{Binding Path=userInterest.IsModerator, Mode=TwoWay}">
                    
                </CheckBox>
            </StackPanel>
            <Button Click="add">Записать на курс</Button>
            <Button Click="back">Вернуться</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            
            <StackPanel>
                <TextBlock FontSize="15" HorizontalAlignment="Center" Text="Список имеющихся групп интересов"></TextBlock>
                <ListView Width="350" Height="150"
     ItemsSource="{Binding userSerivce.UserInterestGroups}"
     SelectedItem="{Binding current}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="Группа: "/>
                                    <Run Text="{Binding InterestGroup.Title}"/>
                                    <Run Text="{Binding JoinedAt}"/>
                                    <Run Text="{Binding IsModerator}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <StackPanel>
                <TextBlock FontSize="15" HorizontalAlignment="Center" Text="Список доступных групп интересов"></TextBlock>
                <ListView Width="350" Height="200"
ItemsSource="{Binding interestService.InterestGroups}"
SelectedItem="{Binding current}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                               <Run Text="Группа: "/>
                               <Run Text="{Binding Title}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Page>
