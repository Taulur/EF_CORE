<Page x:Class="EF_CORE.Pages.EditStudentInterestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="EditStudentInterestPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                
            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Label>Информация о студенте</Label>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Login}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Имя</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Name}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Почта</TextBlock>
                <TextBlock Margin="5" Text="{Binding user.Email}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock>Дата регистрации в группе</TextBlock>
                <DatePicker Text="{Binding userInterest.JoinedAt}"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Является ли модератором</Label>
                <CheckBox IsChecked="{Binding Path=userInterest.IsModerator, Mode=TwoWay}">
                    
                </CheckBox>
            </StackPanel>
            <Button Click="add">Записать на курс</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <ListView
     ItemsSource="{Binding interestService.InterestGroups}"
     SelectedItem="{Binding current}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock>
<Run Text="Группа: "/>
<Run Text="{Binding Title}"/>
                            </TextBlock>
                        </StackPanel>
                            
                         
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        
        
    </Grid>
</Page>
