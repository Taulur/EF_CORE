<Page x:Class="EF_CORE.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      xmlns:converters="clr-namespace:EF_CORE.Converters"
      xmlns:validators="clr-namespace:EF_CORE.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">
    <Page.Resources>
        <converters:ImageConverter x:Key="ImageConverter"></converters:ImageConverter>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label>Телефон</Label>
            <StackPanel>
                <TextBox x:Name="PhoneBox" IsReadOnly="True" >
                    <TextBox.Text>
                        <Binding Path="UserProfile.Phone">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label>День рождения</Label>
            <StackPanel>
                <TextBox x:Name="BirthdayBox" IsReadOnly="True" >
                    <TextBox.Text>
                        <Binding Path="UserProfile.Birthday">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label>URL ссылка</Label>
            <StackPanel>
                <TextBox x:Name="UrlTextBox" IsReadOnly="True" >
                    <TextBox.Text>
                        <Binding Path="UserProfile.AvatarUrl">
                            <!--<Binding.ValidationRules>
                    <validators:PasswordValidation/>
                </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label>Краткое описание</Label>
            <StackPanel>
                <TextBox x:Name="BioBox" IsReadOnly="True" Height="100">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Bio">
                            <!--<Binding.ValidationRules>
                                <validators:PasswordValidation/>
                            </Binding.ValidationRules>-->
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel>
           <Label>Изображение</Label>
            <Image Name="PreviewImage" Width="300" Height="200" Source="{Binding ElementName=UrlTextBox, Path=Text, Converter={StaticResource ImageConverter}}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2">
            <Button Click="save">Редактировать профиль</Button>
            <Button Click="back">Назад</Button>
        </StackPanel>            
    </Grid>
</Page>
