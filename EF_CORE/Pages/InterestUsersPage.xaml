<Page x:Class="EF_CORE.Pages.InterestUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      xmlns:converters="clr-namespace:EF_CORE.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="InterestUsersPage">
    <Page.Resources>
        <converters:ImageConverter x:Key="ImageConverter"></converters:ImageConverter>
    </Page.Resources>
    <StackPanel>

        <Button Click="back">Назад</Button>


        <ListView ItemsSource="{Binding UserInterestGroup}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Student.Login}"/>
                            <TextBlock Text="{Binding Student.Name}"/>
                            <TextBlock Text="{Binding Student.Email}"/>
                            <TextBlock Text="{Binding Student.Password}"/>
                            <TextBlock Text="{Binding Student.CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Student.UserProfile.Phone}"/>
                            <TextBlock Text="{Binding Student.UserProfile.Birthday}"/>
                            <TextBlock Text="{Binding Student.UserProfile.Bio}"/>
                            <Image Name="PreviewImage" Width="300" Height="200" Source="{Binding UserProfile.AvatarUrl, Converter={StaticResource ImageConverter}}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
