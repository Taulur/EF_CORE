<Page x:Class="EF_CORE.Pages.InterestUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_CORE.Pages"
      xmlns:converters="clr-namespace:EF_CORE.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="InterestUsersPage">
    <Page.Resources>
        <converters:ImageConverter x:Key="ImageConverter"></converters:ImageConverter>
    </Page.Resources>
    <StackPanel>

        <Button Click="back">Назад</Button>
        <ListView Width="550" ItemsSource="{Binding UserInterestGroupService.UserInterestGroups}" Height="350">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition>
                            </ColumnDefinition>
                            <ColumnDefinition>
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                            <TextBlock HorizontalAlignment="Center" FontSize="15" Text="Информация "/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Логин : "/>
                                <TextBlock Text="{Binding Student.Login}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Имя : "/>
                                <TextBlock Text="{Binding Student.Name}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Почта : "/>
                                <TextBlock Text="{Binding Student.Email}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Является модератором : "/>
                                <TextBlock Text="{Binding IsModerator}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата присоединения : "/>
                                <TextBlock Text="{Binding JoinedAt}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                            <TextBlock HorizontalAlignment="Center" FontSize="15" Text="Профиль "/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Номер телефона : "/>
                                <TextBlock Text="{Binding Student.UserProfile.Phone}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата рождения : "/>
                                <TextBlock Text="{Binding Student.UserProfile.Birthday}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание : "/>
                                <TextBlock Text="{Binding Student.UserProfile.Bio}"/>
                            </StackPanel>
                            <Image Width="150" Height="150" Source="{Binding Student.UserProfile.AvatarUrl, Converter={StaticResource ImageConverter}}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
